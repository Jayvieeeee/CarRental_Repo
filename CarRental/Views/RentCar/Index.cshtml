
@{
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.min.css">
<link rel="stylesheet" href="~/css/customer/rent.css" />

<!-- IMAGE HEADER AND FILTER-->
<header>
    <div class="image-header"></div>
    <div class="search-container">
        <div class="select-group">
            <label for="selectBrand">Select Brand</label>
            <select name="brand" id="selectBrand">
                <option value="">Choose</option>
                <option value="Hyundai">Hyundai</option>
                <option value="Nissan">Nissan</option>
                <option value="Toyota">Toyota</option>
            </select>
        </div>

        <div class="select-group">
            <label for="selectModel">Select Model</label>
            <select name="model" id="selectModel">
                <option value="">Choose</option>
            </select>
        </div>

        <div class="select-group">
            <label for="selectCapacity">Capacity</label>
            <select name="capacity" id="selectCapacity">
                <option value="">Choose</option>
                <option value="5">5 Seats</option>
                <option value="7">7 Seats</option>
                <option value="12">12 Seats</option>
            </select>
        </div>

        <div class="select-group">
            <label for="selectPrice">Price</label>
            <select name="price" id="selectPrice">
                <option value="">Choose</option>
                <option value="2500">₱2500/day</option>
                <option value="3500">₱3500/day</option>
                <option value="4500">₱4500/day</option>
            </select>
        </div>

        <button type="button" class="search-btn">
            <i class="fas fa-search"></i> Search
        </button>
    </div>
</header>

<body>

<!-- CAR LIST IMAGES-->
<div class="car-list">
        @foreach (var car in Model)
        {
            <div class="car-card"
                 data-make-model="@car.Brand @car.Model"
                 data-seaters="@car.Seaters"
                 data-fuel-type="@car.FuelType"
                 data-fuel-tank-capacity="@car.FuelTankCapacity"
                 data-transmission="@car.Transmission"
                 data-ground-clearance="@car.GroundClearance">

                <div class="car-header">
                    <h2>@car.Brand @car.Model</h2>
                    <a href="#" class="rent-badge" data-id="@car.CarId">Rent</a>
                </div>
                <div class="car-image-container">
                    <img src="~/images/carlist/@car.ImageUrl" alt="@car.Model" class="car-image">
                </div>
                <div class="car-price">
                    <span class="price">₱@car.RentalPrice per day</span>
                    <a href="#" class="details-link" data-id="@car.CarId">Details</a>
                </div>
                <div class="car-features">
                    <span><i class="fas fa-users"></i> @car.Seaters</span>
                    <span><i class="fas fa-briefcase"></i> 2</span>
                    <span><i class="fas fa-cogs"></i> @car.Transmission</span>
                </div>
            </div>
        }
    </div>

<!-- Car Details Modal -->
<div id="detailsModal" class="details-modal">
        <div class="modal-content">
            <span class="close" id="closeDetailsModal">&times;</span>
            <h2 id="carDetailsTitle">Car Details</h2>
            <div class="details-container">
                <img id="carDetailsImage" src="" alt="Car Image" />
                <div>
                    <p id="carDetailsPrice"><strong>₱0</strong> per day</p>
                    <h3>Specifications</h3>
                    <div id="carDetailsSpecs" class="details-specs">
                        <ul>
                            <li><strong>Make & Model:</strong> <span id="makeModel">-</span></li>
                            <li><strong>Seating Capacity:</strong> <span id="seaters">-</span></li>
                            <li><strong>Fuel Type:</strong> <span id="fuelType">-</span></li>
                            <li><strong>Fuel Tank Capacity:</strong> <span id="fuelTankCapacity">-</span></li>
                            <li><strong>Transmission:</strong> <span id="transmission">-</span></li>
                            <li><strong>Ground Clearance:</strong> <span id="groundClearance">-</span></li>
                        </ul>
                    </div>
                    <button id="rentNowBtn" class="rent-btn">Rent Now</button>
                </div>
            </div>
        </div>
    </div>

<!-- TERMS AND CONDITIONS MODAL -->
 <div id="termsModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Terms and Conditions</h2>
            <div class="terms-box" id="termsBox">
                <p>
                    <strong>1. General Terms</strong><br>
                    1.1. By renting a car from DM Cars, the renter agrees to comply with these terms and conditions.<br>
                    1.2. The renter must be at least 25 years old and possess a valid driver’s license.<br>
                    1.3. The rental vehicle must only be used for legal purposes and cannot be used for racing, off-road driving, or any illegal activities.<br>
                    <br>
                    <strong>2. Rental Duration and Return</strong><br>
                    2.1. The rental period starts from the time and date specified in the rental agreement.
                </p>
            </div>
            <div class="checkbox-container">
                <input type="checkbox" id="agreeCheckbox">
                <label for="agreeCheckbox">By clicking here, I state that I have read and understood the terms and conditions.</label>
            </div>
            <button id="acceptBtn" disabled>Accept</button>
        </div>
    </div>

<!-- RENTAL DETAILS MODAL -->
<div id="rentalModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Rental Details</h2>

            <label><strong>Pick-up Date and Time</strong></label>
            <input type="datetime-local" id="pickupDate" required>

            <label><strong>Return Date and Time</strong></label>
            <input type="datetime-local" id="returnDate" required>

            <p><strong>Vehicle Model:</strong> <span id="carModel">-</span></p>
            <p><strong>Pick-up & Return Location:</strong> 10th Avenue, Caloocan City</p>
            <p><strong>Rate Per Day:</strong> <span id="ratePerDay">0</span></p>
            <p><strong>Days Rented:</strong> <span id="daysRented">0</span> days</p>
            <p><strong>Total Payment:</strong> <span id="totalPayment">₱0</span></p>

            <button id="confirmRentalBtn" class="rent-btn">Confirm Rental</button>
        </div>
    </div>

<!-- RENTER DETAILS MODAL -->
<div id="renterModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Renter Details</h2>
            <hr class="modal-divider">

            <div class="form-container">
                <div class="form-group">
                    <label for="firstName">First Name:</label>
                    <input type="text" id="firstName" placeholder="Juan">
                </div>

                <div class="form-group">
                    <label for="lastName">Last Name:</label>
                    <input type="text" id="lastName" placeholder="Dela Cruz">
                </div>

                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" placeholder="juandelacruz@gmail.com">
                </div>

                <div class="form-group">
                    <label for="mobileNumber">Mobile Number:</label>
                    <input type="text" id="mobileNumber" placeholder="+63 - 905 123 45">
                </div>

                <div class="form-group">
                    <label for="address">Address:</label>
                    <input type="text" id="address" placeholder="123 Rizal Avenue, Barangay 78, C">
                </div>

                <div class="form-group">
                    <label for="licenseNumber">License Number:</label>
                    <input type="text" id="licenseNumber" placeholder="A12-345-67890">
                </div>
            </div>

            <button id="submitRenterBtn" class="rent-btn" disabled>Submit</button>
        </div>
    </div>

<!-- SUCCESS CONFIRMATION MODAL -->
<div id="successModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div class="success-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h2>Request Has Been Sent</h2>
            <p><strong>Reference Number:</strong> <span id="referenceNumber">Loading...</span></p>
            <p>
                You will receive an email regarding the status of your booking within 24 hours,
                including confirmation details and any further instructions.
            </p>
            <button id="successOkBtn" class="rent-btn">OK</button>
        </div>
    </div>


<script src="~/js/customer/rent.js"></script>


</body>